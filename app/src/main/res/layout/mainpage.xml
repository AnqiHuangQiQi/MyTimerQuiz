<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainPage"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:background="#9FF781">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="*‹My Quiz›*"
        android:textAlignment="center"
        android:background="#CEF6F5"
        android:gravity="center"
        android:textSize="60sp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/information"
        android:text="Please input your ID and password to login."
        android:gravity="center"
        android:textSize="20sp"
        android:textAlignment="center" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#9FF781">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="    User  ID :"

            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            />
        <EditText
            android:id="@+id/Id"
            android:layout_width="200sp"
            android:layout_height="36dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"

            android:layout_gravity="center_horizontal"
            android:background="#E0F8F7"
            android:gravity="left"
            android:textColor="#000000"

            android:textSize="30sp"
            />
</LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#9FF781">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Password :"

                android:textAlignment="center"
                android:gravity="center"
                android:textSize="25sp"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="200sp"
                android:layout_height="36dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:password = "true"


                android:layout_gravity="center_horizontal"
                android:background="#E0F8F7"
                android:gravity="left"
                android:textColor="#000000"

                android:textSize="30sp"
                />
    </LinearLayout>
        <Button
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:gravity="center_horizontal"

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="45px"
            android:background="#0B3B0B"
            android:text="Login"
            android:textColor="#FFFF00"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>



</RelativeLayout>
